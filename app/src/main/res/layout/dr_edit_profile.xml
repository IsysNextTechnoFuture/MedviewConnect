<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin_xxxlarge"
            android:layout_marginTop="@dimen/text_margin_large"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/password"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_security_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/text_margin_xxxlarge"
            android:layout_marginTop="@dimen/text_margin_large"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/security_question"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/review_image_big"
        android:orientation="vertical"
        android:paddingLeft="@dimen/review_image_big"
        android:paddingRight="@dimen/review_image_big">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_height"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo_with_appanme" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_user"
                    android:layout_width="@dimen/image_width_doc"
                    android:layout_height="@dimen/image_height_medium"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/text_size_small"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/user_image" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin_xxlarge">

                    <Spinner
                        android:id="@+id/spin_province"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/border_et_round_gray"
                        android:imeOptions="actionNext"
                        android:paddingBottom="@dimen/text_margin_normal"
                        android:paddingLeft="@dimen/text_margin_mini"
                        android:paddingRight="@dimen/text_margin_mini"
                        android:paddingTop="@dimen/text_margin_normal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name"
                        android:paddingEnd="@dimen/text_margin_large"
                        android:paddingStart="@dimen/text_margin_large"
                        android:src="@mipmap/spinner_dropdown" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin_xmedium"
                    android:background="@drawable/border_et_round_gray"
                    android:gravity="center_vertical"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/text_margin_xmedium"
                    android:paddingLeft="@dimen/text_margin_medium"
                    android:paddingRight="@dimen/text_margin_medium"
                    android:paddingTop="@dimen/text_margin_xmedium"
                    android:scrollHorizontally="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/lighter_gray"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin_xmedium"
                    android:background="@drawable/border_et_round_gray"
                    android:gravity="center_vertical"
                    android:hint="@string/first_name"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/text_margin_xmedium"
                    android:paddingLeft="@dimen/text_margin_medium"
                    android:paddingRight="@dimen/text_margin_medium"
                    android:paddingTop="@dimen/text_margin_xmedium"
                    android:scrollHorizontally="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/lighter_gray"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin_xmedium"
                    android:background="@drawable/border_et_round_gray"
                    android:gravity="center_vertical"
                    android:hint="@string/last_name"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/text_margin_xmedium"
                    android:paddingLeft="@dimen/text_margin_medium"
                    android:paddingRight="@dimen/text_margin_medium"
                    android:paddingTop="@dimen/text_margin_xmedium"
                    android:scrollHorizontally="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/lighter_gray"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/text_margin_xmedium"
                    android:background="@drawable/border_et_round_gray"
                    android:gravity="center_vertical"
                    android:hint="@string/mobile_number"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/text_margin_xmedium"
                    android:paddingLeft="@dimen/text_margin_medium"
                    android:paddingRight="@dimen/text_margin_medium"
                    android:paddingTop="@dimen/text_margin_xmedium"
                    android:scrollHorizontally="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/lighter_gray"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin_xxlarge"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/text_margin_small"
                        android:layout_weight="1"
                        android:background="@drawable/btn_rounded"
                        android:gravity="center"
                        android:hint="@string/save"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_size_medium" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_close"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin_small"
                        android:layout_weight="1"
                        android:background="@drawable/btn_rounded"
                        android:gravity="center"
                        android:hint="@string/close"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_size_medium" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>