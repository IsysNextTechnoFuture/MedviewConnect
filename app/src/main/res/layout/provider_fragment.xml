<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin_xlarge"
        android:layout_marginRight="@dimen/activity_margin_xlarge"
        android:layout_marginTop="@dimen/activity_margin_xxxlarge"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_favorite_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite_provider"
            android:textColor="@color/lighter_gray"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tv_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin_normal"
            android:layout_marginRight="@dimen/text_margin_normal"
            android:text="@string/provider"
            android:textColor="@color/lighter_gray"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_medium"
        android:layout_marginBottom="@dimen/text_margin_normal"
        android:layout_marginTop="@dimen/text_margin_normal"
        android:background="@color/white" />

    <FrameLayout
        android:id="@+id/fl_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>