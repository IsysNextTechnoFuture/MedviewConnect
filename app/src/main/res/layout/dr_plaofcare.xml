<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin_large"
            android:layout_marginRight="@dimen/text_margin_large"
            android:layout_marginTop="@dimen/text_margin_large">

        <TextView
            android:id="@+id/tv_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SeeMore"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:padding="@dimen/padding_medium"
            android:textSize="@dimen/text_margin_large"/>

        <TextView
            android:id="@+id/tv_plan_care"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/planofcare"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_see_more"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"/>


        <LinearLayout
            android:id="@+id/layout_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_below="@+id/tv_plan_care"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/text_margin_xxlarge">

            <TextView
                android:id="@+id/tv_patient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:text="@string/patient"
                android:textColor="@color/text_color_intake"
                android:layout_gravity="left"
                android:gravity="left"
                android:padding="@dimen/padding_medium"
                android:textSize="@dimen/text_size_medium"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="2.3"
                android:background="@drawable/border_et_round_gray"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spin_patient"
                    android:layout_toRightOf="@+id/tv_patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:dropDownSelector="@mipmap/spinner_dropdown"
                    android:imeOptions="actionNext"
                    android:layout_gravity="right"
                    android:paddingBottom="@dimen/text_margin_normal"
                    android:paddingLeft="@dimen/text_margin_mini"
                    android:paddingRight="@dimen/text_margin_mini"
                    android:paddingTop="@dimen/text_margin_normal" />
                <!--
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:visibility="gone"
                                android:paddingStart="@dimen/text_margin_large"
                                android:paddingEnd="@dimen/text_margin_large"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:contentDescription="@string/app_name"
                                android:src="@mipmap/spinner_dropdown" />-->

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_below="@+id/layout_patient"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/text_margin_xxlarge">

            <TextView
                android:id="@+id/tv_call"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:text="@string/call"
                android:textColor="@color/text_color_intake"
                android:layout_gravity="left"
                android:gravity="left"
                android:padding="@dimen/padding_medium"
                android:textSize="@dimen/text_size_medium"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="2.3"
                android:background="@drawable/border_et_round_gray"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spin_call"
                    android:layout_toRightOf="@+id/tv_patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:dropDownSelector="@mipmap/spinner_dropdown"
                    android:imeOptions="actionNext"
                    android:layout_gravity="right"
                    android:paddingBottom="@dimen/text_margin_normal"
                    android:paddingLeft="@dimen/text_margin_mini"
                    android:paddingRight="@dimen/text_margin_mini"
                    android:paddingTop="@dimen/text_margin_normal" />
                <!--
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:visibility="gone"
                                android:paddingStart="@dimen/text_margin_large"
                                android:paddingEnd="@dimen/text_margin_large"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:contentDescription="@string/app_name"
                                android:src="@mipmap/spinner_dropdown" />-->

            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layot_subjctve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_call"
            android:layout_marginTop="@dimen/text_margin_large"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_Subjective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subjective"
                android:textColor="@color/text_color_intake"
                android:layout_gravity="left"
                android:gravity="left"
                android:padding="@dimen/padding_medium"
                android:textSize="@dimen/text_size_medium"/>

            <EditText
                android:id="@+id/et_subjective"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_width_medium"
                android:paddingBottom="@dimen/text_margin_xmedium"
                android:paddingLeft="@dimen/text_margin_medium"
                android:paddingRight="@dimen/text_margin_medium"
                android:paddingTop="@dimen/text_margin_xmedium"
                android:background="@drawable/border_et_round_gray"
                android:gravity="center_vertical"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|textCapWords"
                android:maxLength="50"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/white"
                android:textColorHint="@color/lighter_gray"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_obejctive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layot_subjctve"
            android:layout_marginTop="@dimen/padding_large"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_objective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/objective"
                android:textColor="@color/text_color_intake"
                android:layout_gravity="left"
                android:gravity="left"
                android:padding="@dimen/padding_medium"
                android:textSize="@dimen/text_size_medium"/>

            <EditText
                android:id="@+id/et_objective"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_width_medium"
                android:paddingBottom="@dimen/text_margin_xmedium"
                android:paddingLeft="@dimen/text_margin_medium"
                android:paddingRight="@dimen/text_margin_medium"
                android:paddingTop="@dimen/text_margin_xmedium"
                android:background="@drawable/border_et_round_gray"
                android:gravity="center_vertical"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|textCapWords"
                android:maxLength="50"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/white"
                android:textColorHint="@color/lighter_gray"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layot_assemnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_obejctive"
            android:layout_marginTop="@dimen/padding_large"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_Assement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assemnet"
                android:textColor="@color/text_color_intake"
                android:layout_gravity="left"
                android:gravity="left"
                android:padding="@dimen/padding_medium"
                android:textSize="@dimen/text_size_medium"/>

            <EditText
                android:id="@+id/et_assesment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_width_medium"
                android:paddingBottom="@dimen/text_margin_xmedium"
                android:paddingLeft="@dimen/text_margin_medium"
                android:paddingRight="@dimen/text_margin_medium"
                android:paddingTop="@dimen/text_margin_xmedium"
                android:background="@drawable/border_et_round_gray"
                android:gravity="center_vertical"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|textCapWords"
                android:maxLength="50"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/white"
                android:textColorHint="@color/lighter_gray"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layot_assemnt"
            android:layout_marginTop="@dimen/padding_large"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plan"
                android:textColor="@color/text_color_intake"
                android:layout_gravity="left"
                android:gravity="left"
                android:padding="@dimen/padding_medium"
                android:textSize="@dimen/text_size_medium"/>

            <EditText
                android:id="@+id/et_plan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_width_medium"
                android:paddingBottom="@dimen/text_margin_xmedium"
                android:paddingLeft="@dimen/text_margin_medium"
                android:paddingRight="@dimen/text_margin_medium"
                android:paddingTop="@dimen/text_margin_xmedium"
                android:background="@drawable/border_et_round_gray"
                android:gravity="center_vertical"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|textCapWords"
                android:maxLength="50"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/white"
                android:textColorHint="@color/lighter_gray"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/laout_esubscriptuon"
            android:layout_below="@+id/layout_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_large"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_eprescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eprescription"
                android:textColor="@color/text_color_intake"
                android:layout_gravity="left"
                android:gravity="left"
                android:padding="@dimen/padding_medium"
                android:textSize="@dimen/text_size_medium"/>

            <EditText
                android:id="@+id/et_prescription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_width_medium"
                android:paddingBottom="@dimen/text_margin_xmedium"
                android:paddingLeft="@dimen/text_margin_medium"
                android:paddingRight="@dimen/text_margin_medium"
                android:paddingTop="@dimen/text_margin_xmedium"
                android:background="@drawable/border_et_round_gray"
                android:gravity="center_vertical"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|textCapWords"
                android:maxLength="50"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/text_color_intake"
                android:textColorHint="@color/lighter_gray"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/send"
            android:layout_below="@+id/laout_esubscriptuon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_large"
            android:layout_marginTop="@dimen/text_margin_xlarge"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/text_margin_xxxlarge"
            android:text="@string/close"
            android:background="@drawable/bt_forgot_border"
            android:textColor="@color/white"/>
    </RelativeLayout>

    </RelativeLayout>

</ScrollView>