<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".SplashActivity">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="200dp">

     <ImageView
         android:layout_width="@dimen/review_image_big"
         android:layout_height="@dimen/review_image_big"
         android:layout_centerHorizontal="true"
         android:padding="@dimen/padding_small"
         android:layout_centerVertical="true"
         android:id="@+id/splash_img_logo"
         android:background="@drawable/dnlogo"></ImageView>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:padding="@dimen/padding_small"
         android:layout_below="@+id/splash_img_logo"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:orientation="horizontal">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/tv_splash_medview"
             android:text="@string/medview"
             android:textSize="@dimen/text_size_large"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/tv_splash_connect"
             android:text="@string/connect"
             android:textSize="@dimen/text_size_large"/>
     </LinearLayout>
 </RelativeLayout>

</LinearLayout>